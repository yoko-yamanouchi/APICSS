// TINY CLASSES HERE

html

	.color

		&-inherit
			color inherit

		&-aqua
			color $aqua

		&-black
			color $black

		&-blue
			color $blue

		&-fuchsia
			color $fuchsia

		&-gray
			color $gray

		&-green
			color $green

		&-lime
			color $lime

		&-maroon
			color $maroon

		&-navy
			color $navy

		&-olive
			color $olive

		&-orange
			color $orange

		&-purple
			color $purple

		&-red
			color $red

		&-silver
			color $silver

		&-teal
			color $teal

		&-white
			color $white

		&-yellow
			color $yellow


	.font

		&-sansserif
			font-family $sans-serif

		&-serif
			font-family $serif

		&-monospace
			font-family $monospace

		&-bold
			font-weight bold

		&-italic
			font-style italic

		&-80per
			font-size 0.8em

		&-120per
			font-size 1.2em


	.text

		&-left
			text-align left

		&-center
			text-align center

		&-right
			text-align right

		&-underline
			text-decoration underline


	.vertical

		&-top
			vertical-align top

		&-middle
			vertical-align middle

		&-bottom
			vertical-align bottom


	.lineheight

		&-narrow
			line-height 1

		&-wide
			line-height $multiple

		&-bottom
			line-height 1
			vertical-align bottom
