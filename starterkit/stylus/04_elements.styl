// MINI RESET HERE

html,
body
	height 100%

html
	min-width 320px

img
	max-width 100%
	height auto

table
	width 100%

thead,
tbody,
tfoot
	vertical-align inherit

a
	&:link
		color $link

	&:visited
		color $visited

	&:hover
		color $hover

	&:active
		color $active

li
	display block

iframe
	display block

label
	cursor pointer

abbr
	cursor help
